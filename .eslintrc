{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    },
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "SyntheticEvent": false,
    "SyntheticInputEvent": false,
    "SyntheticKeyboardEvent": false
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "jsx-quotes": 1,
    "no-console": ["warn"],
    "no-unused-vars": [2, { "vars": "all", "args": "after-used", "argsIgnorePattern": "^_" }],
    "quotes": [2, "single"],
    "react/jsx-no-bind": 1,
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "semi": [2, "never"]
  }
}
